mixin postInfo(item)
    .post-meta
        .post-time
            != full_date(item.date, 'MMMM Do YYYY')

mixin posts()
    ul.home.post-list
        - page.posts.each(function(item, index) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo( item )
                    .post-content
                        != item.excerpt
                hr
        - })

mixin post(item)
    .post
        article.post-block
            h2.post-title
                a.post-title-link(href=url_for(item.path))
                    != item.title
            +postInfo(item)
            .post-content
                != item.content